
<%= form_with model: @todo, local: true do |form| %>

  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@todo.errors.count, "error") %> prohibited
        this Todo from being saved:
      </h2>
      <ul>
        <% @todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class = "form-section">
    <%= form.label :content %><br>
    <%= form.text_field :content %>
  </p>

  <p class = "form-section">
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date %>
  </p>

  <p class = "form-section">
    <%= form.label :priority %><br>
    <% priority_array = [["High", "high"], ["Medium", "medium"], ["Low", "low"]] %>
    <%= select_tag(:priority, options_for_select(priority_array, @priority_default)) %>
  </p>

  <p class = "form-section">
    <%= form.submit %>
  </p>
<% end %>